<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTransaksiActivity"
    android:background="@color/kerimb"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Nama Pelanggan"
        android:fontFamily="@font/bold"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/namaPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:maxLines="1"
        android:inputType="text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Nomor Meja"
        android:fontFamily="@font/semibold"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/nomorMeja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Meja 1"
        android:fontFamily="@font/bold"
        android:textSize="20sp"
        android:textColor="@color/brown"
        android:textStyle="bold"/>
    <CheckBox
        android:id="@+id/dibayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Dibayar"
        android:fontFamily="@font/light"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/semibold"
        android:textColor="@color/kerim"
        android:text="simpan"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kerimb"
    tools:context=".ListDetailTransaksiActivity">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/PrimaryColor">

        <ImageButton
            android:id="@+id/buttonAdd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_baseline_add_24"
            android:backgroundTint="@color/kerim"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/totaler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIST DETAIL TRANSAKSI"
        android:layout_marginStart="55dp"
        android:fontFamily="@font/bold"
        android:layout_marginTop="50dp"
        android:textColor="@color/brown"
        android:textSize="25sp"
      />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/totaler"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: Rp.99999999"
        android:fontFamily="@font/semibold"
        android:layout_below="@id/recyclerDetail"
        android:layout_marginTop="16dp"
        android:textColor="@color/green"
        android:textSize="25sp"
        android:layout_marginLeft="16dp"/>

</RelativeLayout>
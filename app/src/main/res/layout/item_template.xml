<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/namaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:fontFamily="@font/bold"
        android:textColor="@color/brown"
        android:textSize="20sp"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/hargaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp9999999"
        android:fontFamily="@font/light"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:maxLines="1"
        android:layout_below="@id/namaItem"/>

    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/txtJumlah"
        android:background="@color/red"/>
    <ImageButton
        android:id="@+id/buttonSubstract"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/txtJumlah"
        android:backgroundTint="@color/white"
        android:background="@drawable/ic_baseline_remove_24"/>
    <TextView
        android:id="@+id/txtJumlah"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/regular"
        android:layout_toLeftOf="@id/buttonAdd"
        android:text="0"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textColor="@color/black"/>
    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentRight="true"
        android:background="@color/green"/>
    <ImageButton
        android:id="@+id/buttonAdd"
        android:layout_width="30dp"

        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/white"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_baseline_add_24"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@id/hargaItem"/>
</RelativeLayout>